@model EngagerMark4.ApplicationCore.Customer.Entities.CustomerLocation
@using EngagerMark4.HtmlExtension;

<tr class="CustomerLocations" tableIndex="nestedObject_">
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.CustomerId)
    @Html.HiddenFor(x => x.LocationId)
    @Html.HiddenFor(x => x.Location.Code)
    @Html.HiddenFor(x => x.Location.Name)
    @Html.HiddenFor(x => x.ContactPerson)
    @Html.HiddenFor(x => x.ContactNo)
    @Html.HiddenFor(x => x.Fax)
    @Html.HiddenFor(x => x.Email)
    @Html.HiddenFor(x => x.Location.Code)
    @Html.HiddenFor(x => x.Location.Name)
    @Html.HiddenFor(x => x.Location.Latitude)
    @Html.HiddenFor(x => x.Location.Longitude)
    
    <td>
        @Html.CheckBoxFor(x => x.Main, new { @readonly="readonly" })
    </td>
    <td>
        @Html.TextBoxFor(x => x.Location.PostalCode, new { @class = "form-control", @readonly = "readonly" })
    </td>
    <td>
        @Html.TextBoxFor(x => x.Location.Address, new { @class = "form-control", @readonly="readonly" })
    </td>
    <td>
        @Html.TextBoxFor(x => x.Location.City, new { @class = "form-control", @readonly = "readonly" })
    </td>
    <td>
        @Html.TextBoxFor(x => x.Location.Country, new { @class = "form-control", @readonly = "readonly" })
    </td>
    <td class="col-sm-2">
        <label>
            @Html.HiddenFor(m => m.Delete, new { @class = "mark-for-delete" })
            <a href="#" class="btn btn-info btnEdit" >Edit</a>
            @Html.LinkToRemoveNestedForm("Delete", "tr.CustomerLocations", "input.mark-for-delete", new { @class = "btn btn-danger" })
        </label>
    </td>
</tr>
