@model PagedList.IPagedList<EngagerMark4.ApplicationCore.SOP.Entities.CreditNotes.CreditNote>
@using PagedList.Mvc;
@using EngagerMark4.HtmlExtension;
@using EngagerMark4.ApplicationCore.Cris;

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width:10px;"></th>
                <th class="text-left"><a href="#" class="sorter" column="CreditNoteNo" orderBy='@BaseCri.GetOrderString("CreditNoteNo",ViewBag.Column,ViewBag.OrderBy)'>Credit Note Reference No.</a></th>
                <th class="text-left"><a href="#" class="sorter" column="OrderNo" orderBy='@BaseCri.GetOrderString("OrderNo",ViewBag.Column,ViewBag.OrderBy)'>Work Order No.</a></th>
                <th class="text-left"><a href="#" class="sorter" column="DiscountType" orderBy='@BaseCri.GetOrderString("DiscountType", ViewBag.Column, ViewBag.OrderBy)'>Discount Type</th>
                <th class="text-left"><a href="#" class="sorter" column="GrandTotal" orderBy='@BaseCri.GetOrderString("GrandTotal", ViewBag.Column, ViewBag.OrderBy)'>Grand Total</a></th>
                <th class="text-left">Created</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
            <tr>
                <td>
                    <input type="checkbox" class="invoices" name="creditNoteIds" value="@entity.Id" />
                </td>
                <td>@Html.DisplayFor(m => entity.CreditNoteNo)</td>
                <td>@Html.DisplayFor(m => entity.OrderNo)</td>
                <td>@Html.DisplayFor(m => entity.DiscountTypeName)</td>
                <td>@Html.DisplayFor(m => entity.GrandTotal)</td>
                <td>@Html.DisplayFor(m => entity.CreatedStr)</td>
                <td class="col-sm-1">
                    @using (Html.BeginForm("Delete", "CreditNote", FormMethod.Post, new { id = "form" + entity.Id }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@entity.Id" />
            <a class="btn btn-info" href="~/CreditNote/Details/@entity.Id"> <i class="fa fa-pencil fa-lg"></i></a>
            <a class="btn btn-danger" entityId="@entity.Id"> <i class="fa fa-trash fa-lg"></i></a>
}
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("List", new { CurrentPage = page }))
@Html.Partial("_DeleteDialog")

<script src="~/Scripts/Custom/CreditNote/List.js"></script>