@model EngagerMark4.ApplicationCore.SOP.Cris.CreditNoteCri
@{ 
    ViewBag.Title = "Credit Note Details Report";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if(ViewData.ModelState[""]!=null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">x</button>
            @Html.ValidationSummary(true,"Errors: ")
        </div>
    }
    <div class="panel panel-info">
        <div class="panel-heading">Credit Note Details Report</div>
        <div class="panel-body">
            <div class="form-horizontal">
                <fieldset>
                    <legend></legend>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Customers </label>
                        <div class="col-sm-4">
                            <div class="input-group col-sm-12" id="divCustomers">
                                @Html.DropDownList("CustomerId", null, null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">From Date</label>
                        <div class="col-sm-4" data-role="input-control">
                            <div class="input-group" id="divDate">
                                @Html.TextBoxFor(x => x.FromDate, new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">To Date</label>
                        <div class="col-sm-4" data-role="input-control">
                            <div class="input-group" id="divToDate">
                                @Html.TextBoxFor(x => x.ToDate, new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="panel-footer">
            <div class="col-sm-2"></div>
            <button type="submit" id="btnGenerateReport" value="Generate Report" class="btn btn-primary" >Generate Report</button>
        </div>
    </div>
}

<script src="~/Scripts/Custom/CreditNoteDetailsReport/Index.js"