@model EngagerMark4.ApplicationCore.SOP.Entities.CreditNotes.CreditNoteSummary
@using EngagerMark4.HtmlExtension;
@using EngagerMark4.Common.Configs;
@using EngagerMark4.ApplicationCore.Entities;

@{
    ViewBag.Title = "Credit Note Summary";

}

@Html.Partial("_ListMessage")

@using (Html.BeginForm("CustomDetails", "CreditNoteSummary"))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Created)
    @Html.HiddenFor(x => x.CreatedBy)
    @Html.AntiForgeryToken()
    if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">x</button>
            @Html.ValidationSummary(true, "Error: ")
        </div>
    }

    <div class="panel panel-info">
        <div class="panel-heading">Credit Note Summary</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-info" })
            </div>
            <div class="form-horizontal">
                <fieldset>
                    <legend></legend>
                    <br />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-2">CN No.</label>
                            <div class="col-sm-3" data-role="input-control">
                                <input type="text" value="@Model.ReferenceNo" disabled="disabled" class="form-control" />
                                @if (Model.Id == 0)
                                {
                                    <input type="hidden" name="ReferenceNo" value="TBD" />
                                }
                                else
                                {
                                    @Html.HiddenFor(m => m.ReferenceNo)
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Customer</label>
                            <div class="col-sm-3" data-role="input-control">
                                @Html.DropDownList("CustomerId", null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Date</label>
                            <div class="col-sm-3" data-role="input-control">
                                <div class='input-group' id='divPickUpDate'>
                                    @Html.TextBoxFor(x => x.CreditNoteDateStr, new { @class = "form-control" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Status</label>
                            <div class="col-sm-3" data-role="input-control">
                                @Html.EnumDropDownListFor(x => x.Status, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">From Date</label>
                            <div class="col-sm-3" data-role="input-control">
                                <div class='input-group' id='divPickUpDate'>
                                    @Html.TextBoxFor(x => x.FromDateStr, new { @class = "form-control" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">To Date</label>
                            <div class="col-sm-3" data-role="input-control">
                                <div class='input-group' id='divPickUpDate'>
                                    @Html.TextBoxFor(x => x.ToDateStr, new { @class = "form-control" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped" style="font-size:11px;">
                        <thead>
                            <tr>
                                <th style="width:10px;"></th>
                                <th>Invoice No</th>
                                <th>Invoice Date</th>
                                <th>Credit Note Summary No</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var salesInvoiceSummary in ViewBag.SalesInvoiceSummaries as IEnumerable<EngagerMark4.ApplicationCore.SOP.Entities.SalesInvoices.SalesInvoiceSummary>)
                            {
                            <tr>
                                <td>
                                    @if (Model.IsInDetails(salesInvoiceSummary.Id))
                                    {
                                        <input type="checkbox" checked class="invoices" name="SalesInvoiceIds" value="@salesInvoiceSummary.Id" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="invoices" name="SalesInvoiceIds" value="@salesInvoiceSummary.Id" />
                                    }
                                </td>
                                <td>@salesInvoiceSummary.ReferenceNo</td>
                                <td>@salesInvoiceSummary.InvoiceDateStr</td>
                                <td>@salesInvoiceSummary.CreditNoteSummaryNo</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </fieldset>
            </div>
        </div>
        <div class="panel-body">
            <div class="col-sm-2"></div>
            <button type="submit" id="btnSave" value="Save" class="btn btn-primary">Save</button>
        </div>
    </div>
}

<script src="~/Scripts/Custom/CreditNoteSummary/Details.js"></script>