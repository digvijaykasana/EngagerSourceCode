@model EngagerMark4.ApplicationCore.Entities.Configurations.CommonConfiguration
@using EngagerMark4.HtmlExtension;

@{
    ViewBag.Title = "Vessel";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if(ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary(true, "Errors: ")
        </div>
    }

    <div class="panel panel-info">
        <div class="panel-heading">Vessels</div>
        <div class="panel-body">
                <div class="form-group">
                    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-info" })
                </div>
                <div class="form-horizontal">
                    <fieldset>
                        <legend></legend>
                        @Html.HiddenFor(model =>model.Id)

                        @*<div class="form-group">
                            <label class="control-label col-sm-2 required">Configruation Group</label>
                            <div class="col-sm-6" data-role="input-control">
                                @Html.DropDownList("ConfigurationGroupId", null, new { @class = "form-control" })
                            </div>
                        </div>*@

                        @Html.HiddenFor(x => x.ConfigurationGroupId)

                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#VesselInfo" data-toggle="tab">Vessel Info</a></li>
                        </ul>

                        <div class="tab-content">
                            <div id="VesselInfo" class="tab-pane fade in active">
                                <br />
                                <div class="form-horizontal">
                                    <br />
                                    <div class="form-group">
                                        <label class="control-label col-sm-2 required">Code</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            @Html.TextBoxFor(m => m.Code, new { @placeholder = "Code", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Name</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Name", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Serial No</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            @Html.TextBoxFor(m => m.SerialNo, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.SerialNo, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <fieldset>
                                    <legend class="FontSmaller">Add Customers</legend>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Customer</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            @Html.DropDownList("Customers", null, new { @class = "form-control" })
                                        </div>
                                        <div class="col-sm-2">
                                            @Html.LinkToAddNestedForm("Add", "#VesselContainer", ".CustomerVessels", "CustomerList", typeof(EngagerMark4.ApplicationCore.Entities.Configurations.CustomerVesselViewModel), new { @class = "btn btn-primary clsAddVessel" })
                                        </div>
                                    </div>

                                    <div class="table-responsive">
                                        <table id="vesselTable" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Customer</th>
                                                    <th class="col-sm-1">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody id="VesselContainer">
                                                @Html.EditorFor(x => x.CustomerList)
                                            </tbody>
                                        </table>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        
                    </fieldset>
                </div>
            </div>
        <div class="panel-footer">
            <div class="col-sm-2"></div>
            <button type="submit" id="btnSave" value="Save" class="btn btn-primary">Save</button>
        </div>
    </div>
}
@Html.Partial("_ProcessScreen")

<script src="~/Scripts/Custom/Vessel/Details.js"></script>