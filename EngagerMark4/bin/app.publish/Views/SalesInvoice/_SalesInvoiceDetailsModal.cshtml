

<div id="detailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="btnClose" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Sales Invoice Details</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Price</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="hidden" id="tableIndex" />
                            <select id="Prices" class="form-control">
                                <option value="0">-Select-</option>
                                @foreach (var price in ViewBag.Prices as List<EngagerMark4.ApplicationCore.Inventory.Entities.Price>)
                                {
                                    <option value="@price.Id" assignedPrice="@price.AssignedPrice" discountPercent="@price.DiscountPercent" discountAmt="@price.DiscountAmt" taxable="@price.IsTaxable.ToString()">@price.DisplayForSalesInvoiceEdit</option>
                                    @*if (price.Name == "Trip Charges")
                        {
                            <option value="@price.Id" assignedPrice="@price.AssignedPrice" discountPercent="@price.DiscountPercent" discountAmt="@price.DiscountAmt" taxable="@price.IsTaxable.ToString()">@price.Display - @price.PickUpPoint - @price.DropPoint</option>
                        }
                        else
                        {

                        }*@
                                }
                            </select>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Code</label>
                        <div class="col-sm-6" data-role="input-control">
                            <textarea id="txtSalesDetailsCode" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Description</label>
                        <div class="col-sm-6" data-role="input-control">
                            <textarea id="txtDescription" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Qty</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input id="txtQty" type="text" class="form-control textValidate" allowedCharacters="NUMERIC" style="text-align:right" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Price</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input id="txtPrice" type="text" class="form-control textValidate" allowedCharacters="NUMBERIC" style="text-align:right;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Total Amt.</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input id="txtTotalAmt" type="text" class="form-control textValidate" allowedCharacters="NUMERIC" readonly="readonly" style="text-align:right;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Discount Percent</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input id="txtDiscountPercent" type="text" class="form-control textValidate" allowedCharacter="NUMERIC" style="text-align:right;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Discount Amt</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input id="txtDiscountAmt" type="text" class="form-control textValidate" allowedCharacter="NUMERIC" style="text-align:right;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Total Net Amt.</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input id="txtNetAmt" type="text" class="form-control textValidate" allowedCharacter="NUMERIC" readonly="readonly" style="text-align:right;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">GST Essentials</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="checkbox" id="chkGSTEssential" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Sorting Order</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input id="txtSortOrder" type="text" class="form-control textValidate" allowedCharacter="NUMERIC" style="text-align:right;" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnAdd" class="btn btn-info" value="Add">Add</button>
                <button id="btnEdit" class="btn btn-info" style="display:none;">Edit</button>
                <button id="btnCancel" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
