@model EngagerMark4.ApplicationCore.Dummy.Entities.Users.UserCustomer
@using EngagerMark4.HtmlExtension;

<tr class="Customers">
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.UserId)
    @Html.HiddenFor(x => x.CustomerId)
    <td>
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @readonly = "readonly" })
    </td>
    <td class="col-sm-1">
        <label>
            @Html.HiddenFor(x => x.Delete, new { @class = "mark-for-delete" })
            @Html.LinkToRemoveNestedForm("Delete", "tr.Customers", "input.mark-for-delete", new { @class = "btn btn-danger" })
        </label>
    </td>
</tr>
