
@model EngagerMark4.ApplicationCore.SOP.Cris.WorkOrderCri
@{
    ViewBag.Title = "Driver Variable Salary Summary Report";
}

@Html.Partial("_ListMessage")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-info">
        <div class="panel-heading">Driver Variable Salary Summary Report</div>
        <div class="panel-body">
            <div class="form-horizontal">
                <fieldset>
                    <legend></legend>

                    <div class="form-group">
                        <label class="control-label col-sm-2">From Date</label>
                        <div class="col-sm-4" data-role="input-control">
                            <div class="input-group" id="divDate">
                                <input class="form-control" id="DateStr" name="DateStr" type="text" value="">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">To Date</label>
                        <div class="col-sm-4" data-role="input-control">
                            <div class="input-group" id="divToDate">
                                <input class="form-control" id="DateStr" name="ToDateStr" type="text" value="">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- OBSOLETE - Using from date and to date filter instead-->
                    <div class="form-group hidden">
                        <label class="control-label col-sm-2">Month</label>
                        <div class="col-sm-4" data-role="input-control">
                            @Html.DropDownList("Month", null, new { @class = "form-control" })
                        </div>
                    </div>

                    <!-- OBSOLETE - Using from date and to date filter instead-->
                    <div class="form-group hidden">
                        <label class="control-label col-sm-2">Year</label>
                        <div class="col-sm-4" data-role="input-control">
                            @Html.DropDownList("Year", null, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Report Type</label>
                        <div class="col-sm-4" data-role="input-control">
                            @Html.EnumDropDownListFor(x => x.GeneratedReportFormat, null, new { @class = "form-control" })
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="panel-footer">
            <div class="col-sm-2"></div>
            <button type="submit" id="btnGenerateReport" value="Generate Report" class="btn btn-primary">Generate Report</button>
        </div>
    </div>

}

<script src="~/Scripts/Custom/DriverDailyReport/Index.js"></script>