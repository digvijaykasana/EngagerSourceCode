@model EngagerMark4.ApplicationCore.Customer.Entities.Customer

<div id="customerLocationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="btnClose" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Customer Location</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Main</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="hidden" id="tableIndex" />
                            <input type="checkbox" id="chkMain" style="margin-top:10px;" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Contact Person</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtContactPerson" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Contact No</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtContactNo" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Fax</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtFax" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Email</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="email" id="txtEmail" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Code</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtCode" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Name</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Postal Code</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtPostalCode" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Address</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtAddress" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">City</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtCity" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Country</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtCountry" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Latitude</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtLatitude" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 required">Longitude</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtLongitude" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnAddLocation" class="btn btn-info" value="Add">Add</button>
                <button id="btnEditLocation" class="btn btn-info" style="display:none;" >Edit</button>
                <button id="btnCancel" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
