@model PagedList.IPagedList<EngagerMark4.ApplicationCore.Entities.Configurations.Location>
@using PagedList.Mvc;
@using EngagerMark4.HtmlExtension;
@using EngagerMark4.ApplicationCore.Cris;

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-left"><a href="#" class="sorter" column="Name" orderBy='@BaseCri.GetOrderString("Name",ViewBag.Column,ViewBag.OrderBy)'>Name</a></th>
                <th class="text-left"><a href="#" class="sorter" column="PostalCode" orderBy='@BaseCri.GetOrderString("PostalCode",ViewBag.Column,ViewBag.OrderBy)'>Postal Code</a></th>
                <th class="text-left"><a href="#" class="sorter" column="Address" orderBy='@BaseCri.GetOrderString("Address",ViewBag.Column,ViewBag.OrderBy)'>Address</a></th>
                <th class="text-left"><a href="#" class="sorter" column="Latitude" orderBy='@BaseCri.GetOrderString("Latitude",ViewBag.Column,ViewBag.OrderBy)'>Latitude</a></th>
                <th class="text-left"><a href="#" class="sorter" column="Longitude" orderBy='@BaseCri.GetOrderString("Longitude",ViewBag.Column,ViewBag.OrderBy)'>Longitude</a></th>
                <th class="text-left">Created</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => entity.Name)</td>
                    <td>@Html.DisplayFor(m => entity.PostalCode)</td>
                    <td>@Html.DisplayFor(m => entity.Address)</td>
                    <td>@Html.DisplayFor(m => entity.Latitude)</td>
                    <td>@Html.DisplayFor(m => entity.Longitude)</td>
                    <td>@Html.DisplayFor(m => entity.CreatedStr)</td>
                    <td class="col-sm-1">
                        @using (Html.BeginForm("Delete", "Location", FormMethod.Post, new { id = "form" + entity.Id }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@entity.Id" />
                            <a class="btn btn-info" href="~/Location/Details/@entity.Id"> <i class="fa fa-pencil fa-lg"></i></a>
                            <a class="btn btn-danger" entityId="@entity.Id"> <i class="fa fa-trash fa-lg"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("List", new { CurrentPage = page }))
@Html.Partial("_DeleteDialog")

<script src="~/Scripts/Custom/Location/List.js"></script>