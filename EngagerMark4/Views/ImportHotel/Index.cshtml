@{ 
    ViewBag.Title = "Import Hotel";
}
@Html.Partial("_ListMessage")
@using (Html.BeginForm("Index", "ImportHotel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-info">
        <div class="panel-heading">Import Hotel</div>
        <div class="panel-body">
            <div class="form-horizontal">
                <fieldset>
                    <legend></legend>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Hotel Excel File</label>
                        <div class="col-sm-4" data-role="input-control">
                            <input style="margin-top:5px;" type="file" name="hotelExcel" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="panel-footer">
            <div class="col-sm-2"></div>
            <button type="submit" id="btnImportLocation" value="Import Location" class="btn btn-primary">Import Hotel</button>
        </div>
    </div>
}
@Html.Partial("_ProcessScreen")
<script src="~/Scripts/Custom/ImportLocation/Index.js"></script>