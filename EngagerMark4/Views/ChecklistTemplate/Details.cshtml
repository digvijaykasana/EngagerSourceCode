@model EngagerMark4.ApplicationCore.Job.Entities.ChecklistTemplate
@using EngagerMark4.HtmlExtension;

@{
    ViewBag.Title = "Checklist Templatae";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if(ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary(true, "Errors: ")
        </div>
    }

    <div class="panel panel-info">
        <div class="panel-heading">Checklist Template</div>
        <div class="panel-body">
                <div class="form-group">
                    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-info" })
                </div>
                <div class="form-horizontal">
                    <fieldset>
                        <legend></legend>
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#info" data-toggle="tab">Checklist Template</a></li>
                            <li><a href="#function" data-toggle="tab">Checklist</a></li>
                        </ul>
                        @Html.HiddenFor(model =>model.Id)

                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="info">
                                <div class="form-horizontal">
                                    <br/>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2 required">Code</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            @Html.TextBoxFor(m => m.Code, new { @placeholder = "Code", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2 required">Name</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Name", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Customer</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            @Html.DropDownList("ReferenceId", null, "NA", new { @class="form-control" })
                                            @Html.ValidationMessageFor(m => m.ReferenceId, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                              </div>
                            
                            <div id="function" class="tab-pane fade">
                                <div class="form-horizontal">
                                    <br/>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2">Checklist</label>
                                        <div class="col-sm-6" data-role="input-control">
                                            <select id="ChecklistId" class="form-control">
                                                @foreach(var function in ViewBag.CheckList as IEnumerable<EngagerMark4.ApplicationCore.Job.Entities.CheckList>)
                                                {
                                                    <option value="@function.Id" >@function.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-3">
                                            @Html.LinkToAddNestedForm("Add", "#ChecklistContainer", ".Checklist", "Details", typeof(EngagerMark4.ApplicationCore.Job.Entities.CheckListTemplateDetail), new { @class = "btn btn-primary clsAddChecklist" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-8">
                                            <table  class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Checklist</th>
                                                        <th class="col-sm-1"></th>
                                                    </tr>
                                                </thead>
                                                <tbody id="ChecklistContainer">
                                                    @Html.EditorFor(x => x.Details)
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        <div class="panel-footer">
            <div class="col-sm-2"></div>
            <button type="submit" id="btnSave" value="Save" class="btn btn-primary">Save</button>
        </div>
    </div>
}
@Html.Partial("_ProcessScreen")

<script src="~/Scripts/Custom/ChecklistTemplate/Details.js"></script>