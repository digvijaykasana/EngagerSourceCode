
@{
    ViewBag.Title = "Customer";
}

@Html.Partial("_ListMessage")

<div class="panel panel-info">
    <div class="panel-heading">Customer / Company</div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-lg-3">
                    Search Value
                    <input type="text" id="txtCustomer" value="@ViewBag.Name" class="form-control" />
                </div>
                <div class="col-lg-2">
                    <input type="submit" id="btnSearch" class="btn btn-success" value="Search" style="margin-top:15px;" />
                </div>
            </div>
        </div>
        <br/>
        <div class="form-group">
            <a href="~/Customer/Details" class="btn btn-lg btn-block btn-primary" ><i class="fa fa fa-plus-square"></i>&nbsp &nbsp New Customer / Company</a>
        </div>
        <div id="result">

        </div>
    </div>
</div>

<script src="~/Scripts/Custom/Customer/Index.js"></script>
