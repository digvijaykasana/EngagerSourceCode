@model EngagerMark4.ApplicationCore.SOP.PDFs.MonthlyCreditNoteReportPDF
@using EngagerMark4.Common.Utilities;

<html>
<head>
    <meta charset="utf-8" />
    <style>
        .invoice-box {
            max-width: 695px;
            width: 695px;
            height: 1014px;
            max-height: 1014px;
            margin: auto;
            border: 1px solid black;
            box-shadow: 0 0 10px rgba(0, 0, 0, .15);
            font-size: 11px;
        }
    </style>
</head>
<body style="font-family:Tahoma;font-size:11px;">
        <div class="invoice-box">
            <div style="margin:5px;margin-right:5px;">
                <img src="@Url.Action(Model.HeaderLogo, "Images\\Company", null, Request.Url.Scheme)" style="width:680px;" />
            </div>
            <table style="font-family:Tahoma;font-size:11px;">
                <tr style="height:80px;">
                    <td style="width:390px;vertical-align:top;">
                        <table style="font-family:Tahoma;font-size:11px;">
                            <tr>
                                <td style="width:90px;vertical-align:top;"><label style="margin-left:5px;"> <b>MESSRS :</b> </label></td>
                                <td>
                                    @Model.Customer
                                    <br />
                                    @Model.Address
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td style="width:390px;vertical-align:top;">
                        <table style="font-family:Tahoma;font-size:11px;">
                            <tr>
                                <td style="width:200px;text-align:right;">
                                    <b>CN NO: </b>
                                </td>
                                <td>
                                    <label style="margin-left:10px;">
                                        @Model.MonthStr
                                    </label>
                                </td>

                            </tr>
                            <tr>
                                <td style="width:200px;text-align:right;">
                                    <b>DATE: </b>
                                </td>
                                <td>
                                    <label style="margin-left:10px;">
                                        @Model.DateStr
                                    </label>
                                </td>

                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <table style="font-size:11px;font-family:Tahoma;border-collapse:collapse;margin-right:1px;border-bottom:1px solid black;">
                <thead>
                    <tr style="height:30px;border-bottom:1px solid black;background-color:silver;border-top:1px solid black;">
                        <td style="text-align:center;width:160px;border-right:1px solid black;">
                            DATE
                        </td>
                        <td style="text-align:center;width:380px;border-right:1px solid black;">
                            PARTICULARS
                        </td>
                        <td style="text-align:center;width:160px;">
                            Amount (S$)
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr style="height:30px;">
                        <td style="text-align:center;width:160px;border-right:1px solid black;"></td>
                        <td style="text-align:center;width:380px;border-right:1px solid black;"></td>
                        <td style="text-align:center;width:160px;"></td>
                    </tr>
                    <tr style="height:30px;">
                        <td style="text-align:center;width:160px;border-right:1px solid black;"></td>
                        <td style="text-align:left;width:380px;border-right:1px solid black;margin:10px;padding:10px;">
                            <b> Being Discount on Transport Charges as per attached for the month of @Model.LastDate.ToString("MMMM") @Model.LastDate.Year.ToString() </b>
                        </td>
                        <td style="text-align:center;width:160px;">@Model.TotalAmount</td>
                    </tr>
                    @for (int count = 0; count < 20; count++)
                    {
                        <tr style="height:30px;">
                            <td style="text-align:center;width:160px;border-right:1px solid black;"></td>
                            <td style="text-align:center;width:380px;border-right:1px solid black;"></td>
                            <td style="text-align:center;width:160px;"></td>
                        </tr>
                    }
                    <tr style="height:25px;">
                        <td></td>
                        <td style="text-align:right;border-left:1px solid black;border-top:1px solid black;border-right:1px solid black;"><label style="margin-right:5px;"><b>TOTAL </b></label></td>
                        <td style="border-top:1px solid black;text-align:right;"><label style="margin-right:5px;"> @Model.TotalAmount</label></td>
                    </tr>
                </tbody>
            </table>
            <br />
            <div style="width:690px;text-align:center;padding-bottom:10px;font-family:Tahoma;margin-top:5px;">
                <label style="margin-top:5px;"><b>THIS IS A COMPUTER GENERATED PRINTOUT. NO SIGNATURE IS REQUIRED.</b></label>
            </div>
        </div>
</body>
</html>