@model PagedList.IPagedList<EngagerMark4.ApplicationCore.Entities.Users.User>
@using PagedList.Mvc;
@using EngagerMark4.HtmlExtension;
@using EngagerMark4.ApplicationCore.Cris;

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-left"><a href="#" class="sorter" column="LastName" orderBy='@BaseCri.GetOrderString("LastName",ViewBag.Column,ViewBag.OrderBy)'>Last Name</a></th>
                <th class="text-left"><a href="#" class="sorter" column="FirstName" orderBy='@BaseCri.GetOrderString("FirstName",ViewBag.Column,ViewBag.OrderBy)'>First Name</a></th>
                <th class="text-left"><a href="#" class="sorter" column="UserName" orderBy='@BaseCri.GetOrderString("UserName",ViewBag.Column,ViewBag.OrderBy)'>User Name</a></th>
                <th class="text-left"><a href="#" class="sorter" column="Email" orderBy='@BaseCri.GetOrderString("Email",ViewBag.Column,ViewBag.OrderBy)'>Email</a></th>
                <th class="text-left"><a href="#" class="sorter" column="ContactNo" orderBy='@BaseCri.GetOrderString("ContactNo",ViewBag.Column,ViewBag.OrderBy)'>Contact No</a></th>
                <th class="text-left">Created</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(m => entity.LastName)</td>
                    <td>@Html.DisplayFor(m => entity.FirstName)</td>
                    <td>@Html.DisplayFor(m => entity.UserName)</td>
                    <td>@Html.DisplayFor(m => entity.Email)</td>
                    <td>@Html.DisplayFor(m => entity.ContactNo)</td>
                    <td>@Html.DisplayFor(m => entity.CreatedStr)</td>
                    <td class="col-sm-1 text-center">
                        @using (Html.BeginForm("Delete", "AgentManager", FormMethod.Post, new { id = "form" + entity.Id }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@entity.Id" />
                            <a class="btn btn-info" href="~/AgentManager/Details/@entity.Id"> <i class="fa fa-pencil fa-lg"></i></a>
                            //<a class="btn btn-danger" entityId="@entity.Id"> <i class="fa fa-trash fa-lg"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("List", new { CurrentPage = page, SearchValue = ViewBag.SearchValue }))
@Html.Partial("_DeleteDialog")

<script src="~/Scripts/Custom/AgentManager/List.js"></script>