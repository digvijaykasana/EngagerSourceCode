

<div id="workOrderPassengerModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="btnPassengerClose" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Work Order Passenger</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3 required">In Charge</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="hidden" id="tablePassengerIndex" />
                            <input type="checkbox" id="chkInCharge" style="margin-top:10px;" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Name</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="text" id="txtPassengerName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">Rank</label>
                        <div class="col-sm-6" data-role="input-control">
                            @Html.DropDownList("Ranks", null, "N/A", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group" hidden="hidden">
                        <label class="control-label col-sm-3">Vehicle</label>
                        <div class="col-sm-6" data-role="input-control">
                            @Html.DropDownList("Vehicles", null, "N/A", new { @class = "form-control"})
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3">No of Pax</label>
                        <div class="col-sm-6" data-role="input-control">
                            <input type="number" id="txtNoOfPax" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnAddPassenger" class="btn btn-info" value="Add">Add</button>
                <button id="btnEditPassenger" class="btn btn-info" style="display:none;">Edit</button>
                <button id="btnCancelPassenger" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
