@model PagedList.IPagedList<EngagerMark4.ApplicationCore.SOP.Entities.SalesInvoices.SalesInvoiceSummary>
@using PagedList.Mvc;
@using EngagerMark4.HtmlExtension;
@using EngagerMark4.ApplicationCore.Cris;
@using EngagerMark4.ApplicationCore.SOP.Entities.SalesInvoices;

<div class="table-responsive">
    <a href="~/GenerateInvoice" class="btn btn-lg btn-block btn-primary"><i class="fa fa fa-plus-square"></i>&nbsp &nbsp New Invoice / Credit Note</a>
    <br />
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-left" style="font-size:12px;"><a href="#" class="sorter" column="ReferenceNo" orderBy='@BaseCri.GetOrderString("ReferenceNo",ViewBag.Column,ViewBag.OrderBy)' dataType="@BaseCri.DataType.Int64.ToString()">Invoice No</a></th>
                <th class="text-left" style="font-size:12px;">Invoice Date</th>
                <th class="text-left" style="font-size:12px;">Customer Name</th>
                <th class="text-left" style="font-size:12px;">Vessel Name</th>
                @*<th class="text-left" style="font-size:12px;">Status</th>*@
                <th class="text-left" style="font-size:12px;">Created By</th>
                <th class="text-left" style="font-size:12px;">Created</th>
                <th class="text-left" style="font-size:12px;">Modified By</th>
                <th class="text-left" style="font-size:12px;">Modified</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                <tr>
                    <td style="font-size:12px;"><a href="GenerateInvoice?Customers=@entity.CustomerId&Vessels=@entity.VesselId&FromDate=&ToDate=&Status=0&SalesInvoiceSummaryNo=@entity.ReferenceNo&DNNo=@entity.DNNo&InvoiceDate=@entity.InvoiceDate.Value.ToString("dd/MM/yyyy")"> @Html.DisplayFor(m => entity.ReferenceNo) </a></td>
                    <td style="font-size:12px;">@Html.DisplayFor(m => entity.InvoiceDateStr)</td>
                    <td style="font-size:12px;">@Html.DisplayFor(m => entity.CustomerName)</td>
                    <td style="font-size:12px;">@Html.DisplayFor(m => entity.VesselName)</td>
                    @*<td style="font-size:12px;">
                            @(((SalesInvoiceSummary.SalesInvoiceSummaryStatus) entity.Id3).ToString())
                        </td>*@
                    <td style="font-size:12px;">@Html.DisplayFor(m => entity.CreatedByName)</td>
                    <td style="font-size:12px;">@Html.DisplayFor(m => entity.CreatedStr)</td>
                    <td style="font-size:12px;">@Html.DisplayFor(m => entity.ModifiedByName)</td>
                    <td style="font-size:12px;">@Html.DisplayFor(m => entity.ModifiedStr)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("List", new { CurrentPage = page, Column = ViewBag.Column, OrderBy = ViewBag.OrderBy, DataType = ViewBag.DataType, SearchValue = ViewBag.SearchValue, Customers = ViewBag.CustomerId, Vessels = ViewBag.VesselId, FromDate = ViewBag.FromDate, ToDate = ViewBag.ToDate, SalesInvoiceSummaryNo = ViewBag.SalesInvoiceSummaryNo }))
@Html.Partial("_DeleteDialog")
@Html.Partial("_ProcessScreen")
<script src="~/Scripts/Custom/SalesInvoiceSummary/List.js"></script>
