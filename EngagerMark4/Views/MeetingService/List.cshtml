@model PagedList.IPagedList<EngagerMark4.ApplicationCore.Dummy.Entities.MeetingServices.MeetingService>
@using PagedList.Mvc;
@using EngagerMark4.HtmlExtension;
@using EngagerMark4.ApplicationCore.Cris;

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-left"><a href="#" class="sorter" column="Name" orderBy='@BaseCri.GetOrderString("CustomerId",ViewBag.Column,ViewBag.OrderBy)'>Name</a></th>
                <th>Description</th>
                <th>Customer</th>
                <th class="text-left"><a href="#" class="sorter" column="IsDefault" orderBy='@BaseCri.GetOrderString("IsDefault",ViewBag.Column,ViewBag.OrderBy)'>Is Default</a></th>
                <th class="text-left">Created</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
            <tr>
                <td>@Html.DisplayFor(m => entity.Name)</td>
                <td>@Html.DisplayFor(m => entity.Description)</td>
                <td>@Html.DisplayFor(m => entity.CustomerName)</td>
                <td>@Html.DisplayFor(m => entity.IsDefault)</td>
                <td>@Html.DisplayFor(m => entity.CreatedStr)</td>
                <td class="col-sm-1">
                    @using (Html.BeginForm("Delete", "MeetingService", FormMethod.Post, new { id = "form" + entity.Id }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@entity.Id" />
                        <a class="btn btn-info" href="~/MeetingService/Details/@entity.Id"> <i class="fa fa-pencil fa-lg"></i></a>
                        <a class="btn btn-danger" entityId="@entity.Id"> <i class="fa fa-trash fa-lg"></i></a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("List", new { CurrentPage = page }))
@Html.Partial("_DeleteDialog")

<script src="~/Scripts/Custom/MeetingService/List.js"></script>